<h1>Listing plants</h1>

<table>
  <tr>
    <th>Commonname</th>
    <th>Latinname</th>
    <th>Type</th>
    <th>Bloomstart</th>
    <th>Bloomend</th>
    <th>Active</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%= plant.commonname %></td>
    <td><%= plant.latinname %></td>
    <td><%= plant.type %></td>
    <td><%= plant.bloomstart %></td>
    <td><%= plant.bloomend %></td>
    <td><%= plant.active %></td>
    <td><%= plant.user %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

